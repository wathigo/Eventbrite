<%= render 'events/create_event_button' %>
<% if @events.any? %>
  <div class="event-header">Upcoming Events (<%= @upcoming_events.count %>)</div>
  <%= render 'shared/events_list', events: @upcoming_events %>
  <div class="event-header">Past Events (<%= @past_events.count %>)</div>
  <%= render 'shared/events_list', events: @past_events %>
<% end %>
